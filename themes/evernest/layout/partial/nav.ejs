<nav class="navbar">
  <button class="nav-toggle">
    <i class="fas fa-bars"></i>
  </button>

  <ul class="nav-list" id="navList">
    <% theme.menu.forEach(function(item){ %>
      <% if (item.type === 'mode-toggle') { %>
        <li>
          <button id="modeToggle" class="mode-toggle" aria-label="切换夜间模式">
            <i class="<%= item.icon %>"></i> <%= item.name %>
          </button>
        </li>
      <% } else { %>
        <li>
          <a href="<%= item.link %>">
            <% if (item.icon) { %><i class="<%= item.icon %>"></i><% } %>
            <%= item.name %>
          </a>
        </li>
      <% } %>
    <% }) %>
  </ul>
</nav>